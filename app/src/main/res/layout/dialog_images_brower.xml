<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center_horizontal"
             android:orientation="vertical"
             android:paddingTop="@dimen/padding_small_5dp">
    <com.example.administrator.jiayan_project.utils.weight.image_detail.ShowImagesViewPager
        android:id="@+id/vp_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_small_10dp"/>
    <TextView
        android:layout_marginBottom="70pt"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/tv_image_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
</FrameLayout>