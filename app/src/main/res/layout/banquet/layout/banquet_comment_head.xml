<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_marginRight="20pt"
        android:layout_marginLeft="30pt"
        android:background="#edeced"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_image"
        android:layout_marginTop="40pt"
        android:layout_marginLeft="60pt"
        android:layout_width="130pt"
        android:layout_height="130pt" />
    <TextView
        android:id="@+id/comment_name"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="45pt"
        android:layout_toRightOf="@+id/comment_image"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/comment_time"
        android:layout_below="@+id/comment_name"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="20pt"
        android:layout_toRightOf="@+id/comment_image"
        android:textColor="@color/gray"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.hedgehog.ratingbar.RatingBar
        android:layout_marginTop="70pt"
        android:layout_marginRight="15pt"
        android:layout_toLeftOf="@+id/num"
        android:id="@+id/comment_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="100pt"
        hedgehog:clickable="false"
        hedgehog:halfstart="false"
        hedgehog:starCount="5"
        hedgehog:starEmpty="@mipmap/black"
        hedgehog:starFill="@mipmap/yellow"
        hedgehog:starImageHeight="50pt"
        hedgehog:starImageWidth="50pt"
        hedgehog:starImagePadding="5pt"/>
    <TextView
        android:layout_marginRight="30pt"
        android:layout_alignParentRight="true"
        android:id="@+id/num"
        android:layout_marginTop="80pt"
        android:textColor="#ffd100"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="text"
        android:textSize="11sp" />
    <TextView
        android:layout_marginBottom="30pt"
        android:layout_marginTop="20pt"
        android:layout_marginRight="40pt"
        android:layout_marginLeft="40pt"
        android:layout_below="@+id/comment_image"
        android:id="@+id/comment"
        android:textSize="14sp"
        android:textColor="#666566"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>