<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.banquetDetail.BanquetFragment">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="150pt">
<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.youth.banner.Banner
        app:delay_time="3000"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="650pt"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="650pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_marginTop="330pt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/zhuoshuLayout"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="45pt"
    android:paddingRight="30pt"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150pt">
    <TextView
        android:id="@+id/t"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_four"
        android:text="已选择"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/zhuoshu"
        android:layout_toRightOf="@+id/t"
        android:layout_marginLeft="130pt"
        android:text="99桌"
        android:textSize="@dimen/text_six"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerInParent="true"
        android:layout_marginLeft="50pt"
        android:layout_toRightOf="@+id/zhuoshu"
        android:text="10"
        android:id="@+id/renshu"
        android:textSize="@dimen/text_six"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/renshu"
        android:text="人 /桌"
        android:textSize="@dimen/text_four"
        android:textColor="@color/text_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="15pt"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/banque_moret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<include
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    layout="@layout/base_view"/>
    <RelativeLayout
        android:id="@+id/yanseLayout"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="45pt"
        android:paddingRight="30pt"
        android:layout_width="match_parent"
        android:layout_height="150pt">
        <TextView
            android:id="@+id/bucao"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_four"
            android:text="布草摆设"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bucao_color"
            android:layout_toRightOf="@+id/bucao"
            android:layout_centerInParent="true"
            android:layout_marginLeft="82pt"
            android:text="普通红色"
            android:textSize="@dimen/text_six"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tip"
            android:layout_toRightOf="@+id/bucao_color"
            android:layout_centerInParent="true"
            android:layout_marginLeft="42pt"
            android:text="注：豪华摆设比普通摆设贵¥250"
            android:textSize="8sp"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="15pt"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/banque_moret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/base_view"/>
    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="45pt"
        android:paddingRight="30pt"
        android:layout_width="match_parent"
        android:layout_height="150pt">
        <TextView
            android:id="@+id/cuxiao"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_four"
            android:text="促销优惠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/jifenyouhui"
            android:layout_toRightOf="@+id/cuxiao"
            android:layout_centerInParent="true"
            android:layout_marginLeft="82pt"
            android:text="积分优惠："
            android:textSize="@dimen/text_small"
            android:textColor="#b31616"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/use_jifen"
            android:layout_toRightOf="@+id/jifenyouhui"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12pt"
            android:text="满5000可以使用积分优惠"
            android:textSize="@dimen/text_small"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="15pt"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/banque_moret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/base_view"/>
    <RelativeLayout
        android:paddingLeft="45pt"
        android:paddingRight="30pt"
        android:layout_width="match_parent"
        android:layout_height="250pt">
        <TextView
            android:id="@+id/time_select"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_four"
            android:text="时间选择"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_start"
            android:layout_toRightOf="@+id/time_select"
            android:layout_centerInParent="true"
            android:layout_marginLeft="82pt"
            android:layout_width="650pt"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/start_time"
                    android:layout_marginTop="60pt"
                    android:text="11:00"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/start_date"
                    android:layout_marginLeft="22pt"
                    android:layout_marginTop="35pt"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/text_gray"
                    android:text="03-27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_marginLeft="22pt"
                    android:layout_gravity="center"
                    android:src="@mipmap/buife_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_end"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/end_time"
                    android:layout_marginTop="60pt"
                    android:text="11:00"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_marginLeft="22pt"
                    android:layout_marginTop="35pt"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/text_gray"
                    android:text="03-27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginRight="15pt"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/banque_moret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>




<View
    android:background="#d6d4d5"
    android:layout_width="match_parent"
    android:layout_height="30pt"/>
<TextView
    android:textColor="@color/text_gray"
    android:layout_marginTop="30pt"
    android:layout_marginLeft="45pt"
    android:text="订购说明："
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:textColor="@color/text_gray"
    android:text="很多时候，我们需要从各种网页上面抓取数据，而jsoup 是一款Java 的HTML解析器，可直接解析某个URL地址"
    android:layout_margin="45pt"
    android:id="@+id/dinggou"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/base_view"/>
    <TextView
        android:textColor="@color/text_gray"
        android:layout_marginTop="30pt"
        android:layout_marginLeft="45pt"
        android:text="保障说明："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/text_black"
        android:text="下面是一张关于美食的截图，可以留意到这是一个html网页，当我们想要抓取里面的数据的时候，jsoup就能帮到我们很多"
        android:layout_margin="45pt"
        android:id="@+id/baozhang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/base_view"/>
    <TextView
        android:drawableRight="@mipmap/xia_icon"
        android:textColor="@color/text_gray"
        android:layout_marginTop="30pt"
        android:layout_marginLeft="45pt"
        android:text="退款说明"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/text_gray"
        android:text="在开餐四个小时前取消订单，款项全退。如在开餐前四个小时内取消，仅可退款30%，如在开餐前两个小时内取消，则不退款"
        android:layout_margin="45pt"
        android:id="@+id/tuikuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40pt"/>
</LinearLayout>

    </RelativeLayout>
<com.qmuiteam.qmui.layout.QMUILinearLayout
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/white"
    android:layout_marginTop="610pt"
    android:id="@+id/qmui_layout"
    android:orientation="vertical"
    android:layout_marginLeft="30pt"
    android:layout_marginRight="30pt"
    android:layout_width="match_parent"
    android:layout_height="320pt">
<com.qmuiteam.qmui.layout.QMUILinearLayout
    android:id="@+id/twolayout"
    android:layout_margin="15pt"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="30pt"
        android:layout_weight="3"
        android:ellipsize="end"
        android:maxEms="12"
        android:singleLine="true"
        android:text="东莞佛跳墙东墙"
        android:textSize="@dimen/text_large"
        android:id="@+id/dishes_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<TextView
    android:textColor="@color/banquet_text"
    android:textSize="@dimen/text_six"
    android:text="   分享有礼"
    android:id="@+id/dishes_share"
    android:drawableLeft="@mipmap/banquet_share"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</com.qmuiteam.qmui.layout.QMUILinearLayout>

    <LinearLayout
        android:layout_margin="15pt"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/banquet_money"
            android:layout_marginLeft="30pt"
            android:text="现价："
            android:textSize="@dimen/text_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/banquet_money"
            android:text="¥ "
            android:textSize="@dimen/text_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/buy_money"
            android:textColor="@color/banquet_money"
            android:text="1666"
            android:textSize="@dimen/text_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/banquet_money"
            android:text=" /套"
            android:textSize="@dimen/text_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="15pt"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="15"
            android:id="@+id/money_before"
            android:layout_marginLeft="30pt"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="180pt"
            android:text="已销售：999 笔"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.qmuiteam.qmui.layout.QMUILinearLayout>

</FrameLayout>

</android.support.v4.widget.NestedScrollView>
<LinearLayout

    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150pt">
    <LinearLayout
        android:layout_marginTop="15pt"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/banquet_kefu"
            android:layout_centerInParent="true"
            android:id="@+id/kefuimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_small"
            android:layout_gravity="center"
            android:text="客服"
            android:textColor="@color/text_gray"
            android:layout_below="@+id/kefuimg"
            android:id="@+id/kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15pt"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/banquet_like"
            android:layout_centerInParent="true"
            android:id="@+id/likeimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_small"
            android:layout_gravity="center"
            android:text="收藏"
            android:textColor="@color/text_gray"
            android:layout_below="@+id/likeimg"
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
    android:background="@color/app_color_theme_3"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:text="加入购物车"
    android:id="@+id/add_cart"
    android:layout_centerInParent="true"
    android:textColor="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/buy"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/buy_soon"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="立即购买"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>

</FrameLayout>
