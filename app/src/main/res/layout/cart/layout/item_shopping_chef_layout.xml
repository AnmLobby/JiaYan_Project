<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rela_layoutchef"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white">
    <CheckBox
        android:id="@+id/ck_chosechef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:button="@drawable/check_box_style"
        android:scaleX="0.7"
        android:scaleY="0.7" />

    <TextView
        android:id="@+id/yudingchef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_show_picchef"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ck_chosechef" />
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_show_picchef"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:id="@+id/tv_commodity_namechef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_blue"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/xiangqingchef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:drawableLeft="@mipmap/order_pg"
            android:text=" 厨师服务详情："
            android:textSize="@dimen/text_small" />
        <TextView
            android:id="@+id/peoplechef"
            android:layout_marginTop="1dp"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_gray"
            android:id="@+id/tv_commodity_attrchef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/tv_commodity_deletechef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/delete_s"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:visibility="gone" />

</RelativeLayout>