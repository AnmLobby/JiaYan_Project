<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_blue"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.main.SearchFragment">

    <RelativeLayout
        android:id="@+id/layout_author"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height">
<TextView
    android:textColor="#8a8a8a"
    android:textSize="@dimen/text_six"
    android:layout_marginLeft="5pt"
    android:layout_alignParentLeft="true"
    android:layout_centerInParent="true"
    android:drawableLeft="@mipmap/search_back"
    android:text="返回"
    android:id="@+id/tv_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginRight="140pt"
            android:layout_marginBottom="20pt"
            android:layout_marginTop="20pt"
            android:layout_marginLeft="15pt"
            android:background="#f9f7f8"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_cancel">
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/home_searck"
                android:hint="厨师名称 菜名"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_four"
                />
        </LinearLayout>

        <TextView
            android:layout_margin="30pt"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="搜索" />
    </RelativeLayout>
<LinearLayout
    android:background="@color/white"
    android:layout_marginTop="?attr/qmui_topbar_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</LinearLayout>
</FrameLayout>
