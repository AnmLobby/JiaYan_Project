<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_blue"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.main.ClassifyFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height">
        <LinearLayout
            android:id="@+id/search"
            android:layout_margin="20pt"
            android:background="@mipmap/ed_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="20pt"
                android:layout_gravity="center"
                android:src="@mipmap/home_searck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="30pt"
                android:textSize="@dimen/text_four"
                android:textColor="@color/text_gray"
                android:text="厨师名称  菜名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/erweima"
            android:layout_marginRight="15pt"
            android:layout_weight="1"
            android:src="@mipmap/qr_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15pt"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#F7F8F9"/>
    </LinearLayout>
</FrameLayout>
