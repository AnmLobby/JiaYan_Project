<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_color_blue"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.main.HomePageFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height">
        <LinearLayout
            android:id="@+id/search"
            android:paddingRight="10pt"
            android:layout_weight="3"
            android:layout_margin="18pt"
            android:background="@mipmap/ed_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="20pt"
                android:layout_gravity="center"
                android:src="@mipmap/home_searck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="30pt"
                android:textSize="@dimen/text_four"
                android:textColor="@color/text_gray"
                android:text="厨师名称  菜名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/erweima"
            android:layout_marginRight="15pt"
            android:layout_weight="1"
            android:src="@mipmap/qr_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.example.administrator.jiayan_project.utils.weight.FatRecyclerview

        android:id="@+id/recycler"
        android:background="@color/white"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
