<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_blue"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.chef_service.ChefDetailFragment">

    <com.qmuiteam.qmui.widget.QMUITopBar
        app:qmui_topbar_bg_color="@color/qmui_config_color_transparent"
        app:qmui_topbar_need_separator="false"
        app:qmui_topbar_title_color="@color/white"
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>
    <com.example.administrator.jiayan_project.utils.weight.FatRecyclerview
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:id="@+id/recycler"
        android:background="@color/white"
        android:overScrollMode="never"
        android:layout_marginBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<LinearLayout
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="65dp">
    <Button
        android:layout_marginBottom="8dp"
        android:id="@+id/bt_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/app_color_blue"
        android:text="现在预定"
        android:textColor="#ffffff"
        android:textSize="16dp" />
</LinearLayout>
</FrameLayout>
