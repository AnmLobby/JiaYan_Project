<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240pt"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.chef_service.ChefTablayoutFragment">
    <ImageView
        android:src="@drawable/bg_people"
        android:id="@+id/image"
        android:layout_margin="15pt"
        android:layout_width="300pt"
        android:layout_height="210pt" />
    <RelativeLayout
        android:layout_margin="15pt"
        android:layout_toRightOf="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="我是厨师"
            android:id="@+id/name"
            android:textStyle="bold"
            android:textSize="@dimen/text_six"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="12pt"
            android:layout_below="@+id/name"
            android:text="服务标准"
            android:textSize="@dimen/text_four"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:layout_alignParentBottom="true"
            android:layout_width="380pt"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:checked="true"
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_background"
                android:button="@null"
                android:gravity="center"
                android:text="单日"
                android:textColor="@color/radiobutton_textcolor"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_background"
                android:button="@null"
                android:gravity="center"
                android:text="单月"
                android:textColor="@color/radiobutton_textcolor"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_background"
                android:button="@null"
                android:gravity="center"
                android:text="包年"
                android:textColor="@color/radiobutton_textcolor"
                android:textSize="14sp" />
        </RadioGroup>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_six"
            android:textStyle="bold"
            android:textColor="@color/banquet_money"
            android:text="¥999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>
