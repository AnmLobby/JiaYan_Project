<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/app_primary_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.banquetDetail.BookSuccessFragment">

    <com.qmuiteam.qmui.widget.QMUITopBar
        app:qmui_topbar_title_color="@color/white"
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>
<RelativeLayout
    android:layout_marginTop="?attr/qmui_topbar_height"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/book_success"
    android:layout_marginTop="300pt"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:drawableLeft="@mipmap/book_success"
    android:text="   预定成功"
    android:textColor="?attr/app_primary_color"
    android:textSize="@dimen/text_tem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/lianxi"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25pt"
    android:layout_below="@id/book_success"
    android:textSize="@dimen/text_small"
    android:text="预定成功后客服将主动联系你"
    android:textColor="@color/text_gray"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="100pt"
        android:id="@+id/centerlayout"
        android:orientation="vertical"
      android:layout_below="@+id/lianxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/taocan"
            android:textColor="@color/text_black"
            android:text="xx套餐"
            android:layout_gravity="center"
            android:textSize="@dimen/text_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15pt"
            android:id="@+id/time"
            android:textColor="@color/text_black"
            android:text="2018年3月31日11：30"
            android:layout_gravity="center"
            android:textSize="@dimen/text_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15pt"
            android:id="@+id/phone"
            android:text="王先生 15936425689"
            android:textColor="@color/text_black"
            android:layout_gravity="center"
            android:textSize="@dimen/text_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:id="@+id/btn"
    android:layout_marginTop="150pt"
    android:layout_below="@+id/centerlayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:layout_marginRight="15pt"
        android:layout_marginLeft="80pt"
        android:layout_weight="1"
        android:background="@mipmap/cancel_order"
        android:textColor="@color/text_gray"
        android:text="取消订单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="15pt"
        android:layout_marginRight="80pt"
        android:layout_weight="1"
        android:background="@mipmap/change_order"
        android:textColor="@color/white"
        android:text="修改订单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
<LinearLayout
    android:layout_below="@+id/btn"
    android:layout_marginTop="200pt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:drawableRight="@mipmap/xia_icon"
        android:textColor="@color/text_gray"
        android:layout_marginTop="30pt"
        android:layout_marginLeft="45pt"
        android:text="退款说明"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/text_gray"
        android:text="在开餐四个小时前取消订单，款项全退。如在开餐前四个小时内取消，仅可退款30%，如在开餐前两个小时内取消，则不退款"
        android:layout_margin="45pt"
        android:id="@+id/tuikuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</RelativeLayout>
</FrameLayout>
