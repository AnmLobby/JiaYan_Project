<FrameLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_blue"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.mine.AboutFragment">

    <com.qmuiteam.qmui.widget.QMUITopBar
        app:qmui_topbar_title_color="@color/white"
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>
    <LinearLayout
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ImageView
    android:src="@drawable/about"
    android:layout_width="match_parent"
    android:layout_height="500pt" />
    <TextView
        android:textStyle="bold"
        android:text="《广东宴万家餐饮供应链有限公司》"
        android:textSize="@dimen/text_large"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_six"
        android:layout_margin="30pt"
        android:text="\u3000\u3000广东宴万家餐饮供应链有限公司是一家基于睇年例餐饮集团、窑鸡壹号、旺牛农场、绿景食品、味远佳膳食等多家自有产业于-体的饮食供应链，并拥有大型仓库及冷冻库和完善的物流车队，专注饮食行业十余年，致力于提高餐饮服务能力，建造了完善的酒席承办、高端私宴接待的服务体系，为满足日益增长餐饮服务要求，解决大、中小企业食堂厨师出品单一，接待餐及宴会出品质量的问题，“宴万家”餐饮营运而生，突破了固定厨师出品单一，融入了高端多厨元素，可为企业2期厨师轮岗，大大提高出品多元化，同时打破传统宴会原有“下馆子”的模式提供高端宴会定制、私人接待服务，走向尊贵高端厨师“上门服务”的模式，集上门酒席、到店酒席、私宴接待、厨师轮岗等形式的宴会于一体的综合企业，推陈出新，力争做客户最满意餐饮服务团体。 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
