<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_blue"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.yan_news.NewsDetailFragment">
    <com.qmuiteam.qmui.widget.QMUITopBar
        app:qmui_topbar_title_color="@color/white"
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>
    <android.support.v4.widget.NestedScrollView
        android:background="@color/white"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<TextView
    android:text=""
    android:id="@+id/title"
    android:textStyle="bold"
    android:layout_margin="30pt"
    android:textColor="@color/text_black"
    android:textSize="@dimen/text_tem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/time"
    android:text=""
    android:layout_marginLeft="30pt"
    android:textSize="@dimen/text_four"
    android:textColor="@color/gray"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<!--<com.qmuiteam.qmui.widget.QMUIRadiusImageView-->
    <!--android:layout_width="match_parent"-->
    <!--app:qmui_border_width="0dp"-->
    <!--app:qmui_is_circle="false"-->
    <!--app:qmui_corner_radius="3dp"-->
    <!--android:id="@+id/image"-->
    <!--android:layout_margin="30pt"-->
    <!--android:scaleType="fitXY"-->
    <!--android:layout_height="300pt" />-->
<ImageView

    android:layout_margin="30pt"
    android:id="@+id/image"
    android:scaleType="fitXY"
    android:layout_width="match_parent"
    android:layout_height="500pt" />
        <TextView
            android:text=""
            android:id="@+id/contentview"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_six"
            android:layout_margin="30pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text=""
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_four"
                android:layout_marginLeft="30pt"
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_four"
                android:layout_marginRight="30pt"
                android:id="@+id/wwatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
