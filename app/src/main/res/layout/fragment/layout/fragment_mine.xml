<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.main.MineFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.qmuiteam.qmui.widget.QMUIAppBarLayout
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600pt">
        <ImageView
            android:fitsSystemWindows="true"
            android:src="@mipmap/cover_default"
            android:id="@+id/iv_cover_bg"
            android:layout_width="match_parent"
            android:layout_height="280pt"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_below="@+id/iv_cover_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="320pt"/>
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="158pt"
            android:layout_height="158pt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170pt"
            android:clickable="false"
            android:id="@+id/iv_head"
            android:src="@drawable/bg_people"
            app:qmui_border_color="#FFFFFF"
            app:qmui_border_width="3px"
            app:qmui_corner_radius="15dp"
            app:qmui_selected_border_color="?attr/qmui_config_color_gray_4"
            app:qmui_selected_border_width="1px"
            app:qmui_selected_mask_color="?attr/qmui_config_color_gray_8"/>
        <TextView
            android:id="@+id/name"
            android:textSize="@dimen/text_large"
            android:layout_marginTop="15pt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_head"
            android:textStyle="bold"
            android:textColor="#4b484a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </com.qmuiteam.qmui.widget.QMUIAppBarLayout>
    <LinearLayout
        android:layout_marginTop="500pt"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/yuelayout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/yue"
                android:id="@+id/iyue"
                android:layout_width="65pt"
                android:layout_height="65pt"
                android:layout_gravity="center" />
            <TextView
                android:text="余额"
                android:textSize="@dimen/text_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/chongzhilayout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/chongzhi"
                    android:id="@+id/chongzhi"
                    android:layout_width="65pt"
                    android:layout_height="65pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="充值"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/jifenlayout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/jifen"
                    android:id="@+id/jifen"
                    android:layout_width="65pt"
                    android:layout_height="65pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="积分"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="我的订单"
            android:id="@+id/titletext"
            android:layout_marginTop="@dimen/margin_left"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#d9d8d8"
            android:layout_margin="@dimen/margin_left"
            android:layout_width="match_parent"
            android:layout_height="1pt"/>
        <LinearLayout
            android:layout_marginTop="15pt"
            android:layout_marginBottom="15pt"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/daifukuan_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/daifukuan"
                    android:id="@+id/daifukuan"
                    android:layout_width="65pt"
                    android:layout_height="65pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="待付款"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/yizhifu_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/yizhifu"
                    android:id="@+id/yizhifu"
                    android:layout_width="65pt"
                    android:layout_height="65pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="已支付"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/daipingjia_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/daipingjia"
                    android:id="@+id/daipingjia"
                    android:layout_width="65pt"
                    android:layout_height="65pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="待评价"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tuikuan_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/shouhou"
                    android:id="@+id/shouhou"
                    android:layout_width="65pt"
                    android:layout_height="65pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="售后/退款"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="常用工具"
            android:layout_marginTop="@dimen/margin_left"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#d9d8d8"
            android:layout_margin="@dimen/margin_left"
            android:layout_width="match_parent"
            android:layout_height="1pt"/>
        <LinearLayout
            android:layout_marginTop="15pt"
            android:layout_marginBottom="15pt"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/shoucang_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/aa"
                    android:id="@+id/shoucang"
                    android:layout_width="105pt"
                    android:layout_height="105pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="我的收藏"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/huiyuan_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/mhuiyuan"
                    android:id="@+id/huiyuan"
                    android:layout_width="105pt"
                    android:layout_height="105pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="开通会员"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/address_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/mshouhuo"
                    android:id="@+id/shouhuo"
                    android:layout_width="105pt"
                    android:layout_height="105pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="收货地址"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/pingjia_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/mpingjia"
                    android:id="@+id/pingjia"
                    android:layout_width="105pt"
                    android:layout_height="105pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="我的评价"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25pt"
            android:layout_marginBottom="15pt"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/fuwu_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/mfuwu"
                    android:id="@+id/fuwu"
                    android:layout_width="105pt"
                    android:layout_height="105pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="服务说明"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/kefu_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/mcall"
                    android:id="@+id/mcall"
                    android:layout_width="105pt"
                    android:layout_height="105pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="电话客服"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/kajuan_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/mine_setting"
                    android:id="@+id/kajuan"
                    android:layout_width="105pt"
                    android:layout_height="105pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="设置"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/fenxiang_layout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/mfenxiang"
                    android:id="@+id/fenxiang"
                    android:layout_width="105pt"
                    android:layout_height="105pt"
                    android:layout_gravity="center" />
                <TextView
                    android:text="分享好友"
                    android:textSize="@dimen/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"/>
            </LinearLayout>
        </LinearLayout>


        <!--<com.example.administrator.jiayan_project.utils.weight.FatRecyclerview-->
            <!--android:id="@+id/recyclerview"-->
            <!--android:layout_width="match_parent"-->
