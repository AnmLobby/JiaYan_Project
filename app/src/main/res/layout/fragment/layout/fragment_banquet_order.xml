<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/app_primary_color"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.banquetDetail.BanquetOrderFragment">


    <com.qmuiteam.qmui.widget.QMUITopBar
        app:qmui_topbar_title_color="@color/white"
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>
    <android.support.v4.widget.NestedScrollView
        android:background="@color/white"
        android:layout_marginBottom="160pt"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:paddingLeft="60pt"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="170pt">
        <TextView
            android:textSize="@dimen/text_six"
            android:textColor="@color/text_black"
            android:layout_marginTop="30pt"
            android:id="@+id/youhuijiage"
            android:text="优惠价格："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_six"
            android:text="166"
            android:textColor="@color/banquet_money"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="30pt"
            android:layout_toRightOf="@id/youhuijiage"
            android:id="@+id/sure_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="8888"
            android:textSize="@dimen/text_four"
            android:textColor="@color/text_gray"
            android:id="@+id/cancel_money"
            android:layout_marginTop="10pt"
            android:layout_below="@id/youhuijiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
<Button
    android:text="结算"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:textColor="@color/white"
    android:background="@color/app_color_theme_3"
    android:layout_alignParentRight="true"
    android:layout_width="330pt"
    android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_gravity="bottom"
        android:layout_marginBottom="170pt"
        android:background="#dedede"
        android:layout_height="1px"
        android:layout_width="match_parent"/>
</FrameLayout>
