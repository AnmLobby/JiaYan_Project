<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.jiayan_project.ui.fragment.mine.RechargeFragment">

    <com.qmuiteam.qmui.widget.QMUITopBar
        app:qmui_topbar_title_color="@color/white "
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>
<LinearLayout
    android:background="@color/white"
    android:layout_marginTop="?attr/qmui_topbar_height"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:maxLength="6"
        android:layout_margin="40pt"
        android:inputType="number"
        android:hint="  请输入充值金额"
        android:background="@drawable/edittext_style"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="150pt" />
    <TextView
        android:layout_marginLeft="30pt"
        android:layout_marginTop="30pt"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_large"
        android:text="支付方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_margin="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<CheckBox-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:button="@android:color/transparent"-->

            <!--android:drawableRight="@drawable/checkbox_style"-->
            <!--android:text="离线"/>-->
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:padding="5dp"
                android:button="@drawable/radiobutton_shape"
                android:text="微信支付"
                android:textSize="16sp"
                android:textColor="@drawable/color_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:padding="5dp"
                android:button="@drawable/radiobutton_shape"
                android:textColor="@drawable/color_radiobutton"
                android:text="支付宝支付"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="28dp"
        android:background="@color/app_color_blue"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="16dp" />
</LinearLayout>
</FrameLayout>
