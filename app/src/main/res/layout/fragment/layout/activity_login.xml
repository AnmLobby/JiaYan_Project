<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.jiayan_project.ui.activity.LoginActivity">
<ImageView
    android:scaleType="fitXY"
    android:src="@drawable/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
    <LinearLayout
       android:layout_marginLeft="100pt"
        android:layout_marginRight="100pt"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="200dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="13dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@mipmap/login_person"/>

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:inputType="textVisiblePassword"
            android:maxLength="11"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/_9"
            android:textColorHint="@color/_9"
            android:textSize="14dp"/>

        <!--<ImageView-->
            <!--android:id="@+id/iv_clean_phone"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/ic_clear"-->
            <!--android:visibility="gone"/>-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e"/>

    <LinearLayout
        android:layout_marginTop="35pt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="13dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@mipmap/login_password"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:maxLength="6"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/_9"
            android:textColorHint="@color/_9"
            android:textSize="14dp"/>

        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:text="获取验证码"
            android:id="@+id/huoqu_pwd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@mipmap/check_btn" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e"/>

        <Button
            android:id="@+id/login"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:text="登录"
            android:background="@mipmap/login_bg"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginTop="25pt"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="1px"
                android:background="@color/e"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_four"
                android:textColor="@color/white"
                android:text="第三方登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="25pt"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="1px"
                android:background="@color/e"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="50pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="45pt"
                android:layout_toLeftOf="@id/wx"
                android:background="@mipmap/weibo_icon"
                android:id="@+id/wb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerHorizontal="true"
                android:background="@mipmap/wx_icon"
                android:id="@+id/wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="45pt"
                android:layout_toRightOf="@id/wx"
                android:background="@mipmap/qq_icon"
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
