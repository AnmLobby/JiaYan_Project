<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUIRelativeLayout
    android:layout_marginLeft="10pt"
    android:layout_marginRight="10pt"
    android:id="@+id/layout"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="450pt"
    android:layout_height="600pt">
<ImageView
    android:scaleType="fitXY"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="300pt" />
<android.support.v7.widget.CardView
    android:layout_centerInParent="true"
    android:elevation="0dp"
    hedgehog:cardBackgroundColor="#fffefe"
    hedgehog:cardCornerRadius="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginBottom="18pt"
        android:layout_marginTop="18pt"
        android:layout_marginRight="28pt"
        android:layout_marginLeft="28pt"
        android:id="@+id/name"
        android:textSize="12sp"
        android:text="万达的"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.v7.widget.CardView>
    <com.hedgehog.ratingbar.RatingBar
        android:layout_below="@+id/image"
        android:layout_marginLeft="30dp"
        android:id="@+id/ratingbar"
        android:layout_marginTop="50pt"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        hedgehog:clickable="false"
        hedgehog:halfstart="true"
        hedgehog:starCount="5"
        hedgehog:starEmpty="@mipmap/black"
        hedgehog:starFill="@mipmap/yellow"
        hedgehog:starImageHeight="50pt"
        hedgehog:starImageWidth="50pt"
        hedgehog:starImagePadding="5pt"/>
    <LinearLayout
        android:id="@+id/line"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150pt">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/one"
            android:gravity="center"
            android:text="基础\n验证"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginBottom="50pt"
            android:background="#d2d1d2"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/two"
            android:text="营养\n师证"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginBottom="50pt"
            android:background="#d2d1d2"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/three"
            android:text="厨师\n证"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.qmuiteam.qmui.layout.QMUIRelativeLayout>