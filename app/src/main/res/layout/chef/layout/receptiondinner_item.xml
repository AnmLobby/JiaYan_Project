<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="20pt"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300pt">
<View
    android:layout_alignParentBottom="true"
    android:layout_marginRight="10pt"

    android:layout_marginTop="1dp"
    android:layout_marginLeft="45pt"
    android:background="#dedede"
    android:layout_width="match_parent"
    android:layout_height="1pt"/>
    <!--<ImageView-->
        <!--android:layout_marginLeft="20pt"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:id="@+id/image"-->
        <!--android:layout_width="480pt"-->
        <!--android:layout_height="270pt" />-->
    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/image"
        android:layout_marginLeft="20pt"
        android:layout_alignParentLeft="true"
        app:qmui_corner_radius="4dp"
        app:qmui_is_circle="false"
        android:layout_width="480pt"
        android:layout_height="270pt"
        app:qmui_border_width="0dp"
        />

    <TextView
        android:id="@+id/title"
        android:ellipsize="end"
        android:textSize="@dimen/text_six"
        android:maxLines="1"
        android:textColor="#333333"
        android:layout_marginTop="8pt"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:text="服务标准"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="20pt"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="10pt"
        android:id="@+id/saclenum"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20pt"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="10pt"
        android:id="@+id/price"
        android:textColor="@color/banquet_money"
        android:textSize="@dimen/text_six"
        android:layout_marginTop="15pt"
        android:layout_marginRight="20pt"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>