<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290pt">

    <ImageView
        android:id="@+id/image"
        android:layout_width="330pt"
        android:layout_height="250pt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />
    <RelativeLayout
        android:layout_margin="25pt"
        android:layout_toRightOf="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/name"
        android:textStyle="bold"
        android:textSize="@dimen/text_six"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8pt"
            android:layout_below="@+id/name"
            android:text="服务标准"
            android:textSize="@dimen/text_small"
            android:textColor="#c7c6c6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/group"
                android:layout_alignParentBottom="true"
                android:layout_width="380pt"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:checked="true"
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="单月"
                    android:textColor="@color/radiobutton_textcolor"
                    android:textSize="14sp" />
                <RadioButton
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="半年"
                    android:textColor="@color/radiobutton_textcolor"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="全年"
                    android:textColor="@color/radiobutton_textcolor"
                    android:textSize="14sp" />
            </RadioGroup>
      <TextView
          android:layout_margin="20pt"
          android:id="@+id/buy_chefmoney"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:textSize="@dimen/text_six"
          android:textStyle="bold"
          android:textColor="@color/banquet_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </RelativeLayout>
    <include
        android:layout_alignParentBottom="true"
        layout="@layout/base_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>