<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/message_all"
    android:layout_width="match_parent"
    android:layout_height="200pt">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_bg"
        android:src="@drawable/bg_people"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30pt"
        android:layout_width="50pt"
        android:layout_height="50pt" />
    <RelativeLayout
        android:layout_marginLeft="30pt"
        android:layout_toRightOf="@+id/head_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:text="我是大厨"
    android:textStyle="bold"
    android:id="@+id/name"
    android:textSize="@dimen/text_large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:text="999"
    android:id="@+id/service_num"
    android:textSize="@dimen/text_small"
    android:layout_toRightOf="@+id/name"
    android:layout_marginLeft="30pt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <TextView
            android:text="菜系——八大体系"
            android:id="@+id/caixi"
            android:textSize="@dimen/text_four"
            android:layout_below="@+id/name"
            android:layout_marginLeft="30pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/message_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="已验证信息："
            android:id="@+id/check_msg"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30pt"
            android:textSize="@dimen/text_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>