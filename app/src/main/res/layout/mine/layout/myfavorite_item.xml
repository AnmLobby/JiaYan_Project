<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="20pt"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="290pt">

    <ImageView
        android:layout_marginLeft="10pt"
        android:layout_alignParentLeft="true"
        android:id="@+id/image"
        android:layout_width="370pt"
        android:layout_height="280pt" />
    <TextView
        android:id="@+id/title"
        android:ellipsize="end"
        android:textSize="@dimen/text_four"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@color/text_black"
        android:layout_marginTop="20pt"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detail"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_small"
        android:layout_marginTop="20pt"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/money"
        android:textColor="@color/banquet_money"
        android:textSize="@dimen/text_small"
        android:layout_marginTop="20pt"
        android:layout_below="@+id/detail"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:layout_width="170pt"
        android:layout_height="70pt"
        android:clickable="true"
        android:textSize="12sp"
        android:text="取消收藏"
        android:layout_marginBottom="20pt"
        android:id="@+id/cancel"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buy"
        android:textColor="@color/gray"
        app:qmui_borderColor="@color/gray"
        app:qmui_radius="2dp"/>
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/buy"
        android:layout_width="170pt"
        android:layout_height="70pt"
        android:layout_margin="20pt"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:textSize="12sp"
        android:text="一键购买"
        android:textColor="@color/banquet_money"
        app:qmui_borderColor="@color/banquet_money"
        app:qmui_radius="2dp"/>

</RelativeLayout>